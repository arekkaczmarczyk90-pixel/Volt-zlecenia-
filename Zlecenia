    <script>
        const KOD_DOSTEPU = "121212";

        function showPage(id) {
            ['home', 'add', 'prices', 'legal', 'hero-map'].forEach(p => {
                const el = document.getElementById(p);
                if(el) el.classList.add('hidden');
            });
            document.getElementById(id).classList.remove('hidden');
            if(id === 'home') document.getElementById('hero-map').classList.remove('hidden');
            window.scrollTo(0,0);
        }

        function unlock(id) {
            const input = document.getElementById('pass-' + id).value;
            if(input === KOD_DOSTEPU) {
                document.getElementById('lock-' + id).classList.add('hidden');
                document.getElementById('number-' + id).classList.remove('hidden');
            } else {
                alert("BDNY KOD! Przelij napiwek BLIK na 786 259 909, aby otrzyma kod dostpu.");
            }
        }

        function filterCity(city, btn) {
            document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active-filter'));
            btn.classList.add('active-filter');
            document.querySelectorAll('.ad-item').forEach(item => {
                item.style.display = (city === 'all' || item.getAttribute('data-city') === city) ? 'flex' : 'none';
            });
        }

        // Funkcja wysyajca gotowy SMS
        function sendSMSTemplate() {
            const city = document.getElementById('smsCity').value;
            const desc = document.getElementById('smsDesc').value;
            const phone = "786259909";
            
            if(!city || !desc) {
                alert("Wypenij miasto i opis!");
                return;
            }

            const message = encodeURIComponent(`Zlecenie: ${city}, ${desc}`);
            // Wykrywanie systemu operacyjnego dla protokou SMS
            const smsHref = (navigator.userAgent.match(/iPhone|iPad|iPod/i)) 
                ? `sms:${phone}&body=${message}` 
                : `sms:${phone}?body=${message}`;
            
            window.location.href = smsHref;
        }
    </script>
